# Database
DATABASE_URL="file:./dev.db"

# Email Configuration (for order confirmations and verification emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# Admin email for order notifications
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NAME=Your Restaurant Name

# JWT Secret for session management (generate a secure random string)
JWT_SECRET=your-secure-jwt-secret-key

# Next.js App URL (update for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secure-nextauth-secret

# Clover POS Integration (Optional)
CLOVER_API_URL=https://api.clover.com
CLOVER_MERCHANT_ID=your-clover-merchant-id
CLOVER_ACCESS_TOKEN=your-clover-access-token
CLOVER_APP_ID=your-clover-app-id
